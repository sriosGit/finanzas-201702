<center>
<div class="form-container">
  <h2 class="white">Finanzas 2017</h2>
<div class="div50"></div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, :class => 'white' %><br />
    <%= f.email_field :email, autofocus: true, :class => 'form-input'  %>
  </div>

  <div class="field">
    <%= f.label :password , :class => 'white'%><br />
    <%= f.password_field :password, autocomplete: "off",  :class => 'form-input'  %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me , :class => 'white' %>
    </div>
  <% end -%>
<br>
  <div class="actions">
    <%= f.submit "Log in", :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</center>
